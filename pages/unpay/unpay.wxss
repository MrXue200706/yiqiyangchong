.unpay{
    background-color: #f2f7f8;
}

/*标题*/
.unpay_title{
    height: 128rpx;
    /*background-color: #888;*/
    background:linear-gradient(to bottom,#ff8900,#fdbe2b);
    display: flex;
    align-items: center;
    font-size: 32rpx;
    color: #fff;
    padding: 0 28rpx;
}

/*地址*/
.unpay_address{
    width: 100%;
    height: 124rpx;
    margin-top: 16rpx;
    background-color: #fff;
    position: relative;
    box-sizing: border-box;
}
.unpay_address_content{
    height: 100%;
    font-size: 26rpx;
    margin-left: 66rpx;
    line-height: 2em;
    padding-top: 10rpx;
}
.unpay_address_content_down{
    color: #888;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.unpay_address_button{
    padding: 0 20rpx;
    height: 42rpx;
    line-height: 42rpx;
    text-align: center;
    color: #e72f28;
    font-size: 26rpx;
    border: 1px solid #e72f28;
    border-radius: 10rpx;
    position: absolute;
    top: 16rpx;
    right: 30rpx;
}
.unpay_address_icon{
    width: 32rpx;
    height: 32rpx;
    /*background-color: #888;*/
    position: absolute;
    top: 40rpx;
    left: 18rpx;
}
.unpay_address_icon image{
    width: 100%;
}

/*订单号*/
.unpay_order{
    width: 100%;
    height: 124rpx;
    margin-top: 16rpx;
    background-color: #fff;
    padding: 0 28rpx;
    border-bottom: 1px solid #e4e4e4;
    box-sizing: border-box;
    position: relative;
}
.unpay_order_content{
    height: 100%;
    font-size: 26rpx;
    color: #888;
    line-height: 2em;
    padding-top: 10rpx;
}
.unpay_order_button{
    padding: 0 20rpx;
    height: 42rpx;
    line-height: 42rpx;
    text-align: center;
    color: #888;
    font-size: 26rpx;
    border: 1px solid #888;
    border-radius: 10rpx;
    position: absolute;
    top: 16rpx;
    right: 30rpx;
}
.setpositions{
    padding-right: 50rpx;
    width: 80%;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.showloginse{
    display: inline-block;
    /* padding-right: 40rpx; */
}
.showRightIcon{
    display: block;
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    bottom: 28rpx;
    right: 30rpx;
}
.showRightIcon image{
    width: 100%;
}

/*商品*/
.unpay_goods{
    background-color: #fff;
    padding: 20rpx 10rpx;
    border-bottom: 1px solid #e4e4e4;
    overflow: hidden;
}
.unpay_goods_content{
    background-color: #f8f8f8;
    height: 140rpx;
    padding: 10rpx;
    display: flex;
    align-items: center;
    overflow: hidden;
}
.unpay_goods_content_img{
    width: 126rpx;
    height: 120rpx;
    background-color: #888;
    flex-shrink: 0;
}
.unpay_goods_content_img image{
    width: 100%;
}
.unpay_goods_content_text{
    height: 100%;
    margin-left: 20rpx;
    display: flex;
    flex-wrap: wrap;
    align-content: space-around;
}
.unpay_goods_content_text_title{
    font-size: 28rpx;
}
.unpay_goods_content_text_detail{
    font-size: 22rpx;
    color: #888;
}
.unpay_goods_price{
    font-size: 28rpx;
    padding: 10rpx 18rpx;
    overflow: hidden;
}
.unpay_goods_price_left{
    float: left;
}
.unpay_goods_price_right{
    float: right;
    color: #e72f28;
}
.unpay_goods_price_free{
    float: right;
    color: #888;
}

/*积分*/
.unpay_integral{
    background-color: #fff;
    padding: 28rpx;
    border-bottom: 1px solid #e4e4e4;
    overflow: hidden;
}
.unpay_integral_content_left{
    float: left;
    font-size: 28rpx;
    vertical-align: middle;
}
.unpay_integral_content_right{
    float: right;
}

/*总金额*/
.unpay_totle{
    padding: 28rpx;
    font-size: 28rpx;
    overflow: hidden;
    background-color: #fff;
}
.unpay_totle_text,.unpay_totle_red{
    float: right;
}
.unpay_totle_red{
    color: #e72f28;
}

/*积分提示*/
.unpay_notice{
    padding: 28rpx;
    background-color: #fff;
    display: flex;
    flex-wrap: nowrap;
    margin-top: 16rpx;
}
.unpay_notice_spot{
    font-size: 20rpx;
    color: #fff;
    background-color: #e90;
    border-radius: 5rpx;
    padding: 0 10rpx;
}
.unpay_notice_content{
    font-size: 26rpx;
    color: #888;
    margin-left: 10rpx;
}

/*占位*/
.unpay_placeholder{
    height: 120rpx;
}

/*底部*/
.unpay_foot{
    width: 100%;
    height: 104rpx;
    background-color: #fff;
    font-size: 26rpx;
    display: flex;
    flex-wrap: nowrap;
    justify-content: flex-end;
    align-items: center;
    position: absolute;
    bottom: 0;
}
.unpay_foot_cancel{
    height: 60rpx;
    line-height: 60rpx;
    color: #888;
    padding: 0 32rpx;
    border: 1px solid #888;
    border-radius: 10rpx;
    text-align: center;
    margin-right: 28rpx;
}
.unpay_foot_pay{
    height: 60rpx;
    line-height: 60rpx;
    color: #fff;
    padding: 0 32rpx;
    background-color: #e72f28;
    border-radius: 10rpx;
    text-align: center;
    margin-right: 28rpx;
}