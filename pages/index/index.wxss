.red_bag_class{
  height: 80rpx;
  width:80rpx;
  position: fixed;
  z-index: 99;
  right: 30rpx !important;
  top: 70%;
  /* transform: translateY(-50%); */
  animation: myfirst 0.8s linear 2s infinite alternate;
}
.nobackground{
  transform:translateX(0)!important;
}
