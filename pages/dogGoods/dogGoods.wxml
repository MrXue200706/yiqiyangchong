<view class="dogGoods">
  <!--分类-->
  <veiw class="dogGoods_class">
    <view class="dogGoods_class_item {{menuId==item.id?'dogGoods_class_item_active':''}}" data-menuId='{{item.id}}' bindtap="chooseMenu" wx:for="{{categoryMenu}}">{{item.category_name}}</view>
