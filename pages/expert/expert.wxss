/*商品*/
.expert_goods{
    padding: 0 28rpx;
    margin-top: 28rpx;
    position: relative;
}
.expert_goods_content{
    height: 208rpx;
    background-color: #fff;
    border-radius: 15rpx;
    display: flex;
    flex-wrap: nowrap;
}
.expert_goods_content_item{
    width: 50%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding: 20rpx 0;
    box-sizing: border-box;
}
.expert_goods_content_item_title{
    text-align: center;
    font-size: 28rpx;
}
.expert_goods_content_item_detail{
    text-align: center;
    font-size: 22rpx;
    color: #888;
}
.expert_goods_content_item_avatar{
    display: flex;
    flex-wrap: nowrap;
    justify-content: center;
}
.expert_goods_content_item_avatar_item{
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    background-color: #888;
    flex-shrink: 0;
    border: 1px solid #fff;
    box-sizing: border-box;
    margin-left: -26rpx;
    overflow: hidden;
}
.expert_goods_content_item_avatar_item image{
    width: 100%;
}
.expert_goods_content_item_avatar_item_first{
    margin: 0;
}
.expert_goods_line{
    width: 2rpx;
    height: 146rpx;
    background-color: #eee;
    position: absolute;
    top: 30rpx;
    left: 50%;
}

